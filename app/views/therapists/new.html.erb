<div class="container">
<h1>Add a Therapist</h1>

<div id="therapist">
</div>

<div class="container" id="therapist-form">

<%= bootstrap_form_for @therapist, url: therapists_path do |f| %>
<%= errors_for(@therapist) %>

<%= f.text_field :name, placeholder: "Therapist's Name" %>

<%= f.text_field :location, placeholder: "City, State" %>

 <%## <%=  f.text_field :phone_number %><br>


<%= f.submit "Submit", data: { disable_with: false }, id: 'new_therapist', class: 'form-control' %>
</div>
<% end %>
<br>

    <button type="button" class="btn btn-primary" id="all_therapists">See All Therapists</button>

    <button type="button" class="btn btn-primary" id="sorted_therapists">Sort Therapists</button>

  </div>
